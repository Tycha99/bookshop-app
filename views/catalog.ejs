<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Каталог — BookShop</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body data-role="<%= user ? user.role : '' %>">
<%- include('partials/header') %>

<main class="container">
    <h1>Каталог книг</h1>

    <% if (user && (user.role === 'seller' || user.role === 'admin')) { %>
        <p><a href="/books/add" class="btn btn-primary">Добавить книгу</a></p>
    <% } %>

    <div class="search-bar">
        <input type="text" id="search" placeholder="Поиск книг...">
    </div>

    <div class="book-grid">
        <% books.forEach(function(book) { %>
            <div class="book-card">
                <img src="<%= book.image ? '/uploads/' + book.image : '/images/default-book.jpg' %>" alt="<%= book.title %>" class="book-card-img">
                <div class="book-info">
                    <h3><%= book.title %></h3>
                    <p class="author"><%= book.author %></p>
                    <p class="price"><%= book.price %> ₽</p>
                    <div class="actions">
                        <% if (user && user.role === 'buyer') { %>
                            <button class="btn add-btn" data-id="<%= book.id %>">В корзину</button>
                        <% } %>
                        <% if (user && (user.role === 'seller' || user.role === 'admin')) { %>
                            <form action="/books/delete/<%= book.id %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</main>

<div class="success-flash" id="success-flash">Книга добавлена в корзину!</div>

<script>
    $(function(){
        var role = $('body').data('role');
        var isBuyer = (role === 'buyer');

        // AJAX-поиск
        $('#search').on('input', function() {
            var q = $(this).val();
            $.get('/books/search', { q: q }, function(list) {
                var html = '';
                list.forEach(function(book) {
                    html += '<div class="book-card">'
                        +   '<img src="' + (book.image ? '/uploads/' + book.image : '/images/default-book.jpg') + '" alt="' + book.title + '" class="book-card-img">'
                        +   '<div class="book-info">'
                        +     '<h3>' + book.title + '</h3>'
                        +     '<p class="author">' + book.author + '</p>'
                        +     '<p class="price">' + book.price + ' ₽</p>'
                        +     '<div class="actions">';
                    if (isBuyer) {
                        html += '<button class="btn add-btn" data-id="' + book.id + '">В корзину</button>';
                    }
                    if (role === 'seller' || role === 'admin') {
                        html += '<form action="/books/delete/' + book.id + '" method="post" style="display:inline;">'
                            +   '<button type="submit" class="btn btn-danger">Удалить</button>'
                            + '</form>';
                    }
                    html +=     '</div>'
                        +   '</div>'
                        + '</div>';
                });
                $('.book-grid').html(html);
            });
        });

        // AJAX добавление в корзину
        $('body').on('click', '.add-btn', function() {
            var bookId = $(this).data('id');
            $.post('/cart/add', { bookId: bookId }, function() {
                $('#success-flash').fadeIn(200).delay(800).fadeOut(400);
            });
        });
    });
</script>
</body>
</html>
